---
// Reusable navigation component
import logoSvg from "../../logo_ver2.1.svg?url";
import logoJpg from "../../logo.jpg?url";
---
<header class="bg-[#0C1A3F] shadow-md sticky top-0 z-50">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="flex items-center gap-3">
            <picture>
                <source media="(max-width: 640px)" srcset={logoJpg} type="image/jpeg" />
                <source srcset={logoSvg} type="image/svg+xml" />
                <img src={logoSvg} alt="72° AI Labs logo" class="h-8 w-auto" />
            </picture>
            <span class="sr-only">72° AI LABS</span>
        </a>
        <nav class="hidden md:flex space-x-6">
            <a href="/about" class="text-gray-200 hover:text-white transition-colors duration-300">About</a>
            <a href="/#services" class="text-gray-200 hover:text-white transition-colors duration-300">Services</a>
            <a href="/contact" class="px-4 py-2 bg-[#DDA744] hover:bg-[#c49038] text-[#0C1A3F] rounded-full transition-colors duration-300">Contact Us</a>
        </nav>
        <button id="mobile-menu-button" class="md:hidden text-gray-200 hover:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
        </button>
    </div>
    <div id="mobile-menu" class="hidden md:hidden bg-[#0C1A3F] pb-4">
        <a href="/about" class="block text-gray-200 hover:text-white px-4 py-2 transition-colors duration-300">About</a>
        <a href="/#services" class="block text-gray-200 hover:text-white px-4 py-2 transition-colors duration-300">Services</a>
        <a href="/contact" class="block text-[#0C1A3F] bg-[#DDA744] hover:bg-[#c49038] px-4 py-2 mt-2 mx-4 rounded-full transition-colors duration-300 text-center">Contact Us</a>
    </div>
</header>
<script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });
</script>
