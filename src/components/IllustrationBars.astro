---
// Simple on-brand bar chart illustration (SVG)
const width = 320;
const height = 220;
---
<svg width={width} height={height} viewBox="0 0 320 220" role="img" aria-label="Bar chart illustration">
  <defs>
    <linearGradient id="barGold" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#FFD48A"/>
      <stop offset="100%" stop-color="#DDA744"/>
    </linearGradient>
    <linearGradient id="barBlue" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#2A3866"/>
      <stop offset="100%" stop-color="#0C1A3F"/>
    </linearGradient>
  </defs>
  <rect x="0" y="0" width="320" height="220" rx="12" fill="#FFFFFF" stroke="rgba(12,26,63,0.08)"/>
  <g transform="translate(24,16)">
    <rect x="0" y="0" width="272" height="160" fill="#F8F2E7" stroke="rgba(12,26,63,0.08)" rx="8"/>
    <!-- Grid lines -->
    <g stroke="rgba(12,26,63,0.08)" stroke-width="1">
      <line x1="0" y1="40" x2="272" y2="40" />
      <line x1="0" y1="80" x2="272" y2="80" />
      <line x1="0" y1="120" x2="272" y2="120" />
    </g>
    <!-- Bars -->
    <g>
      <rect x="28"  y="80"  width="36" height="72" fill="url(#barBlue)" rx="6"/>
      <rect x="92"  y="54"  width="36" height="98" fill="url(#barGold)" rx="6"/>
      <rect x="156" y="96"  width="36" height="56" fill="url(#barBlue)" rx="6"/>
      <rect x="220" y="34"  width="36" height="118" fill="url(#barGold)" rx="6"/>
    </g>
  </g>
  <!-- No visible caption to avoid duplicating nearby copy -->
</svg>
