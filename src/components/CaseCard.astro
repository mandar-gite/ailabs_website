---
import type { CaseStudy } from "../data/caseStudies";

export interface Props {
    caseStudy: CaseStudy;
}

const { caseStudy } = Astro.props;
---
<div class="bg-white p-6 rounded-lg shadow-xl hover:shadow-2xl transition-shadow duration-300 text-[#0C1A3F]">
    <h3 class="text-xl font-semibold mb-2">{caseStudy.title}</h3>
    <p class="text-gray-600 mb-4">{caseStudy.problem}</p>
    <div class="space-y-2 text-sm text-gray-700">
        <p><strong>Intervention:</strong> {caseStudy.intervention}</p>
        <p><strong>Outcome:</strong> {caseStudy.outcome}</p>
    </div>
    <div class="mt-4 text-center">
        <a href={caseStudy.link} class="text-[#0C1A3F] hover:opacity-80 font-medium transition-colors duration-300">
            Read More &rarr;
        </a>
    </div>
</div>
