---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import ContactForm from "../components/ContactForm.astro";
import HowItWorks from "../components/HowItWorks.astro";
import CaseCard from "../components/CaseCard.astro";
import caseStudies from "../data/caseStudies.json";

const seoTitle = "72¬∞ AI LABS - AI Consulting for Indian Businesses";
const seoDescription = "AI that turns Indian business data into working decisions for SMEs, hospitality, and manufacturing. Frugal, deployable, context-aware AI solutions.";
---
<Layout title={seoTitle} description={seoDescription}>
  <Nav />
  <main class="container mx-auto px-4">
    <!-- Hero Section -->
    <section id="hero" class="text-center py-20 md:py-32">
        <h1 class="text-4xl md:text-6xl font-extrabold leading-tight text-white mb-4">
            AI that turns Indian business data into <br class="hidden md:inline" /><span class="text-teal-400">working decisions</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-400 mb-8 max-w-2xl mx-auto">
            From PetPooja + Tally + GSTN + WhatsApp to clean, actionable dashboards‚Äîand ‚Çπ savings you can point to.
        </p>
        

        <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-4">
            <a href="https://calendar.google.com/calendar/u/0/appointments/schedules/AcZssZ0RU90Vld_gQnF0Ei7x5DZD344qWCBpv4wXu6EwK5IiNb0r24PlpwUVhpb79Qy93-qroH283L_h" target="_blank" class="px-8 py-3 bg-teal-500 hover:bg-teal-600 text-white font-semibold rounded-full shadow-lg transition-colors duration-300">
                Book a Free Consultation Call
            </a>
            <a href="https://wa.me/+919819715970?text=Hi%2C%20I%20saw%20your%20website%20and%20I'm%20interested%20in%20learning%20more%20about%20your%20services." target="_blank" class="px-8 py-3 bg-gray-800 border border-gray-600 hover:bg-gray-700 text-white font-semibold rounded-full shadow-lg transition-colors duration-300">
                WhatsApp Us
            </a>
</div>
        <div class="mt-8">
          <a href="/resources/one-pager.pdf" class="text-sm text-gray-500 hover:text-gray-400 transition-colors duration-300">Download One-Pager &darr;</a>
        </div>
        
        <!-- Trust Logos/Integrations -->
        <div class="mt-16 py-8 px-4 bg-gray-800 rounded-lg max-w-4xl mx-auto">
            <h3 class="text-lg font-semibold text-gray-400 mb-4">Built to integrate with your existing systems:</h3>
            <div class="flex justify-center items-center space-x-6 md:space-x-12 opacity-50">
                <img src="/logos/petpooja.svg" alt="PetPooja Logo" class="h-8 md:h-10" />
                <img src="/logos/tally.svg" alt="Tally Logo" class="h-8 md:h-10" />
                <img src="/logos/gstn.svg" alt="GSTN Logo" class="h-8 md:h-10" />
                <img src="/logos/whatsapp.svg" alt="WhatsApp Logo" class="h-8 md:h-10" />
            </div>
        </div>
    </section>

    <!-- Sector Tiles -->
    <section id="sectors" class="py-16">
        <h2 class="text-3xl font-bold text-white mb-10 text-center">Our Focus Sectors</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            <div class="p-8 bg-gray-800 rounded-lg shadow-xl hover:shadow-2xl transition-shadow duration-300">
                <span class="text-5xl mb-4 block">üçΩÔ∏è</span>
                <h3 class="text-xl font-semibold text-white mb-2">Hospitality (F&B)</h3>
                <p class="text-gray-400">Leverage your PetPooja data to reduce wastage and optimize menus.</p>
            </div>
            <div class="p-8 bg-gray-800 rounded-lg shadow-xl hover:shadow-2xl transition-shadow duration-300">
                <span class="text-5xl mb-4 block">üè≠</span>
                <h3 class="text-xl font-semibold text-white mb-2">Manufacturing</h3>
                <p class="text-gray-400">Unlock efficiency and reduce downtime with real-time OEE insights.</p>
            </div>
            <div class="p-8 bg-gray-800 rounded-lg shadow-xl hover:shadow-2xl transition-shadow duration-300">
                <span class="text-5xl mb-4 block">üß©</span>
                <h3 class="text-xl font-semibold text-white mb-2">SMEs (Cross-functional)</h3>
                <p class="text-gray-400">Turn fragmented Tally and GSTN data into actionable financial intelligence.</p>
            </div>
        </div>
    </section>

    <HowItWorks />

    <!-- Mini Case Snippets -->
    <section id="case-snippets" class="py-16">
      <h2 class="text-3xl font-bold text-white mb-10 text-center">Real, Frugal AI Wins</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {caseStudies.map(cs => <CaseCard caseStudy={cs} />)}
      </div>
      <div class="text-center mt-12">
        <a href="/case-studies" class="px-6 py-3 bg-teal-500 hover:bg-teal-600 text-white font-semibold rounded-full transition-colors duration-300">
          View All Case Studies
        </a>
      </div>
    </section>

    <!-- Proof Band -->
    <section class="py-16 text-center">
        <div class="max-w-3xl mx-auto">
            <h3 class="text-3xl font-semibold text-gray-300 mb-4">
                "Built in India, for India."
            </h3>
            <p class="text-gray-500">
                ~ Founder, Mandar Gite, BITS Pilani Alumnus
            </p>
        </div>
    </section>

    <!-- Newsletter Opt-in -->
    <section id="newsletter-optin" class="py-16">
        <div class="bg-gray-800 p-8 rounded-lg shadow-xl max-w-2xl mx-auto text-center">
            <h3 class="text-2xl font-bold text-white mb-4">
                Get frugal AI playbooks in your inbox.
            </h3>
            <p class="text-gray-400 mb-6">
                Receive our concise, actionable guides on turning data into decisions. No fluff, no jargon.
            </p>
            <form action="https://formspree.io/f/mzzvqgqw" method="POST" class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4 justify-center">
                <input type="email" name="email" placeholder="Enter your email" class="px-4 py-2 rounded-md bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-teal-500 flex-grow" required />
                <button type="submit" class="px-6 py-2 bg-teal-500 hover:bg-teal-600 text-white font-semibold rounded-full shadow-lg transition-colors duration-300">
                    Subscribe
