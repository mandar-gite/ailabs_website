            </form>
        </div>
    </section>

    <ContactForm />
  </main>
  
  <!-- Footer -->
  <footer class="bg-gray-800 py-8 text-gray-400 text-center">
      <div class="container mx-auto px-4">
          <p class="mb-4">&copy; 2024 72¬∞ AI LABS. All rights reserved.</p>
          <div class="flex justify-center space-x-6">
              <a href="https://wa.me/+919819715970" target="_blank" class="hover:text-white transition-colors duration-300">WhatsApp</a>
              <a href="https://www.linkedin.com/company/72¬∞-ai-lab" target="_blank" class="hover:text-white transition-colors duration-300">LinkedIn</a>
              <a href="mailto:hello@72ai.in" class="hover:text-white transition-colors duration-300">Email</a>
          </div>
          <p class="mt-4 text-sm text-gray-600">
            <a href="/privacy-policy" class="hover:underline">Privacy Policy</a> | <a href="/terms" class="hover:underline">Terms of Service</a>
          </p>
      </div>
  </footer>
</Layout>
