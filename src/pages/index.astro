---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";
// Import logo assets
import logoSvg from "../../logo_ver2.1.svg?url";
import logoJpg from "../../logo.jpg?url";
const seoTitle = "72¬∞ AI Labs - Turn Data Into Decisions";
const seoDescription = "Turn your business data into clear, confident decisions with 72¬∞ AI Labs. Affordable AI solutions for growing businesses.";
---
<Layout title={seoTitle} description={seoDescription}>
    <!-- Header -->
    <header class="header">
        <div class="max-w-[1200px] mx-auto px-5">
            <nav class="nav">
                <div class="logo flex items-center gap-3">
                    <picture>
                        <source media="(max-width: 640px)" srcset={logoJpg} type="image/jpeg" />
                        <source srcset={logoSvg} type="image/svg+xml" />
                        <img src={logoSvg} alt="72¬∞ AI Labs logo" class="h-12 md:h-14 lg:h-16 w-auto" loading="eager" decoding="async" />
                    </picture>
                    <span class="sr-only">72¬∞ AI Labs</span>
                </div>
                <div class="nav-links">
                    <a href="#solutions">Solutions</a>
                    <a href="#contact">Contact</a>
                </div>
            </nav>

            <div class="hero">
                <h1>Turn Your Business Data Into <span class="highlight">Clear, Confident Decisions</span></h1>
                <p class="subtitle">Quickly, simply, and affordably. No guesswork, no jargon ‚Äì just smarter decisions for your growing business.</p>
                <a href="#contact" class="cta-button">Get Started Today</a>
            </div>
        </div>
    </header>

    <!-- Value Proposition -->
    <section class="value-prop">
        <div class="max-w-[1200px] mx-auto px-5">
            <h2 class="section-title">Your Data Already Knows The Answer</h2>
            <p class="section-subtitle">We help you find it ‚Äì without the complexity or cost of enterprise solutions</p>

            <div class="stats">
                <div class="stat-item">
                    <div class="stat-number">72hrs</div>
                    <p>From Data to Insights</p>
                </div>
                <div class="stat-item">
                    <div class="stat-number">100%</div>
                    <p>Works with Your Tools</p>
                </div>
                <div class="stat-item">
                    <div class="stat-number">0</div>
                    <p>Complex Migrations</p>
                </div>
            </div>

            <div class="value-grid">
                <div class="value-card">
                    <div class="value-icon">‚ö°</div>
                    <h3>Speed + Accuracy</h3>
                    <p>Quick answers without compromising trust. Get insights in hours, not months.</p>
                </div>
                <div class="value-card">
                    <div class="value-icon">üéØ</div>
                    <h3>Fit-for-Purpose</h3>
                    <p>Only the features and insights you actually need. No bloated enterprise complexity.</p>
                </div>
                <div class="value-card">
                    <div class="value-icon">üîó</div>
                    <h3>Integration-Friendly</h3>
                    <p>Works seamlessly with Tally, Zoho, Excel, and tools you already use daily.</p>
                </div>
                <div class="value-card">
                    <div class="value-icon">üîç</div>
                    <h3>Hidden Patterns</h3>
                    <p>Spot risks and opportunities before they become obvious to competitors.</p>
                </div>
                <div class="value-card">
                    <div class="value-icon">üáÆüá≥</div>
                    <h3>Local Intelligence</h3>
                    <p>Understands India's seasonal cycles, regional shifts, and market dynamics.</p>
                </div>
                <div class="value-card">
                    <div class="value-icon">üí∞</div>
                    <h3>SMB Pricing</h3>
                    <p>Enterprise AI capabilities at prices that make sense for growing businesses.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Problem Section -->
    <section class="problem-section" id="problem-section">
        <div class="max-w-[1200px] mx-auto px-5">
            <h2 class="problem-title">Are You Making Decisions Blind?</h2>
            <div class="problem-grid">
                <div class="problem-col">
                    <ul class="problem-list reveal-list" aria-label="Select the issues you face most">
                        <li class="problem-item" data-i="1">
                            <span class="problem-icon" aria-hidden="true">
                                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <rect x="3" y="3" width="14" height="18" rx="2" fill="#F2E9D8" stroke="#0C1A3F"/>
                                  <path d="M7 10 L13 16 M13 10 L7 16" stroke="#DDA744" stroke-width="2" stroke-linecap="round"/>
                                  <path d="M17 7 L13 3 V7 H17 Z" fill="#DDA744"/>
                                </svg>
                            </span>
                            <span>You're juggling 15 Excel sheets and still can't answer ‚ÄúWhat's my best‚Äëselling item?‚Äù</span>
                        </li>
                        <li class="problem-item" data-i="2">
                            <span class="problem-icon" aria-hidden="true">
                                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <rect x="3" y="4" width="18" height="17" rx="2" fill="#FFFFFF" stroke="#0C1A3F"/>
                                  <rect x="3" y="4" width="18" height="4" fill="#DDA744"/>
                                  <rect x="6" y="2" width="2" height="4" rx="1" fill="#0C1A3F"/>
                                  <rect x="16" y="2" width="2" height="4" rx="1" fill="#0C1A3F"/>
                                </svg>
                            </span>
                            <span>Every monsoon feels like d√©j√† vu ‚Äî demand spikes, but your stock is flat.</span>
                        </li>
                        <li class="problem-item" data-i="3">
                            <span class="problem-icon" aria-hidden="true">
                                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M12 21 C9 19 5 16 4 12 C3 9 5 7 7.5 7 C9 7 10.2 7.7 11 8.8 L12 10 L13 8.8 C13.8 7.7 15 7 16.5 7 C19 7 21 9 20 12 C19 16 15 19 12 21 Z" fill="#DDA744" stroke="#0C1A3F"/>
                                  <path d="M12 10 L10.5 12.5" stroke="#0C1A3F" stroke-width="1.5"/>
                                </svg>
                            </span>
                            <span>By the time you realize customers are leaving, they already have.</span>
                        </li>
                        <li class="problem-item" data-i="4">
                            <span class="problem-icon" aria-hidden="true">
                                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <circle cx="12" cy="12" r="9" fill="#FFFFFF" stroke="#0C1A3F"/>
                                  <path d="M12 12 L17 14" stroke="#DDA744" stroke-width="2" stroke-linecap="round"/>
                                  <path d="M6 12 A6 6 0 0 1 18 12" stroke="#0C1A3F" fill="none"/>
                                </svg>
                            </span>
                            <span>Inventory decisions run on gut feel instead of signal.</span>
                        </li>
                        <li class="problem-item" data-i="5">
                            <span class="problem-icon" aria-hidden="true">
                                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <path d="M3 17 L21 7" stroke="#DDA744" stroke-width="2" stroke-linecap="round"/>
                                  <circle cx="18" cy="7" r="2" fill="#0C1A3F"/>
                                  <path d="M4 17 h6" stroke="#0C1A3F" stroke-width="2" stroke-linecap="round"/>
                                </svg>
                            </span>
                            <span>Competitors move faster because they see patterns you don't.</span>
                        </li>
                        <li class="problem-item" data-i="6">
                            <span class="problem-icon" aria-hidden="true">
                                <svg width="22" height="22" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                  <circle cx="12" cy="12" r="9" fill="#F2E9D8" stroke="#0C1A3F"/>
                                  <text x="8" y="15" font-family="Montserrat, Arial, sans-serif" font-size="10" fill="#0C1A3F">‚Çπ</text>
                                </svg>
                            </span>
                            <span>‚ÄúEnterprise AI‚Äù quotes start at 10√ó your budget.</span>
                        </li>
                    </ul>
                </div>
                <div class="flex flex-col items-center">
                    <div class="dx-box mt-4 w-full max-w-[420px]" id="dx-box" aria-live="polite">
                        <div class="dx-row">
                            <strong>Which of these do you face most?</strong>
                            <span><span class="dx-count" id="issue-count">0</span>/6 selected</span>
                        </div>
                        <p id="dx-msg" class="mt-1 text-sm opacity-80">Tap the ones that sting.</p>
                    </div>
                    <div class="dx-pop" id="dx-pop">
                        <div class="title">You‚Äôre taking blind decisions.</div>
                        <div class="note">Let‚Äôs light up the signal in your data.</div>
                    </div>
                    <p id="answers-line" class="mt-4 text-center answers-line answers-burst hidden">Your data has answers.<br/>You just need the right questions.</p>
                    <div id="dx-cta-final" class="text-center hidden">
                        <a href="#contact" class="dx-cta dx-cta-final">Get a free audit</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Solution Section -->
    <section class="solution-section" id="solutions">
        <div class="max-w-[1200px] mx-auto px-5">
            <h2 class="section-title">AI Tools That Fit Your Business</h2>
            <p class="section-subtitle">Not the other way around</p>

            <div class="solution-grid">
                <div class="solution-card">
                    <div class="solution-number">01</div>
                    <h3>Connect Your Data</h3>
                    <p>Link your existing systems ‚Äì Tally, Zoho, spreadsheets. No migration headaches.</p>
                </div>
                <div class="solution-card">
                    <div class="solution-number">02</div>
                    <h3>Smart Analysis</h3>
                    <p>AI finds patterns, predicts trends, and spots risks automatically.</p>
                </div>
                <div class="solution-card">
                    <div class="solution-number">03</div>
                    <h3>Clear Insights</h3>
                    <p>Plain English answers to your business questions. No technical jargon.</p>
                </div>
                <div class="solution-card">
                    <div class="solution-number">04</div>
                    <h3>Take Action</h3>
                    <p>Specific recommendations you can implement immediately.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section" id="contact">
        <div class="max-w-[1200px] mx-auto px-5">
            <div class="cta-content">
                <h2>Ready to Make Smarter Decisions?</h2>
                <p>Let's turn your business data into your competitive advantage</p>

                <!-- Reuse shared contact form component -->
                <div class="contact-form">
                    <h3 class="mb-4">Get Your Free Business Intelligence Audit</h3>
                    <!-- Use the Astro component version of the form -->
                    <ContactForm />
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="max-w-[1200px] mx-auto px-5">
            <img src={logoSvg} alt="72¬∞ AI Labs logo" class="h-10 w-auto mx-auto mb-3" loading="lazy" decoding="async" />
            <p>&copy; 2025 72¬∞ AI LABS. Turning data into decisions since day one.</p>
            <p class="mt-2 opacity-70">
                Built for Indian SMBs | Designed for Real Results
            </p>
        </div>
    </footer>

    <script>
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Reveal animation for problem list items with staggered timing
        const items = document.querySelectorAll('.problem-item');
        const obs = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const el = entry.target;
              const i = Number(el.getAttribute('data-i') || '0');
              el.style.animationDelay = `${Math.max(0, i - 1) * 120}ms`;
              el.classList.add('in-view');
              obs.unobserve(el);
            }
          });
        }, { threshold: 0.2 });
        items.forEach(el => obs.observe(el));

        // Mini-score: toggle selection and update count/message
        const countEl = document.getElementById('issue-count');
        const msgEl = document.getElementById('dx-msg');
        const dxPop = document.getElementById('dx-pop');
        const answersLine = document.getElementById('answers-line');
        const ctaFinal = document.getElementById('dx-cta-final');
        let answersTimer = null;
        let ctaTimer = null;
        const problemSection = document.getElementById('problem-section');
        function updateScore() {
          const count = document.querySelectorAll('.problem-item.selected').length;
          if (countEl) countEl.textContent = String(count);
          if (!msgEl) return;
          if (count >= 3) {
            msgEl.textContent = "If you ticked 3 or more, you‚Äôre flying blind.";
            if (problemSection) problemSection.classList.add('dx-active');
            if (dxPop) dxPop.style.display = 'block';
            if (answersLine) {
              if (answersTimer) clearTimeout(answersTimer);
              answersTimer = setTimeout(() => { 
                answersLine.classList.remove('hidden');
                answersLine.classList.add('show');
              }, 800);
            }
            if (ctaFinal) {
              if (ctaTimer) clearTimeout(ctaTimer);
              ctaTimer = setTimeout(() => { ctaFinal.classList.remove('hidden'); }, 800 + 650);
            }
          } else if (count === 0) {
            msgEl.textContent = "Tap the ones that sting.";
            if (problemSection) problemSection.classList.remove('dx-active');
            if (dxPop) dxPop.style.display = 'none';
            if (answersLine) {
              if (answersTimer) clearTimeout(answersTimer);
              answersLine.classList.remove('show');
              answersLine.classList.add('hidden');
            }
            if (ctaFinal) { if (ctaTimer) clearTimeout(ctaTimer); ctaFinal.classList.add('hidden'); }
          } else {
            msgEl.textContent = "Keep going ‚Äî be honest.";
            if (problemSection) problemSection.classList.remove('dx-active');
            if (dxPop) dxPop.style.display = 'none';
            if (answersLine) {
              if (answersTimer) clearTimeout(answersTimer);
              answersLine.classList.remove('show');
              answersLine.classList.add('hidden');
            }
            if (ctaFinal) { if (ctaTimer) clearTimeout(ctaTimer); ctaFinal.classList.add('hidden'); }
          }
        }
        function attachToggle(el) {
          el.setAttribute('role', 'checkbox');
          el.setAttribute('tabindex', '0');
          el.setAttribute('aria-checked', 'false');
          const toggle = () => {
            const selected = el.classList.toggle('selected');
            el.setAttribute('aria-checked', selected ? 'true' : 'false');
            updateScore();
          };
          el.addEventListener('click', toggle);
          el.addEventListener('keydown', (e) => {
            if (e.key === ' ' || e.key === 'Enter') { e.preventDefault(); toggle(); }
          });
        }
        document.querySelectorAll('.problem-item').forEach(attachToggle);
    </script>
</Layout>
